@model IEnumerable<HNWebPortal.Models.RoleViewModel>

@{
    ViewBag.Title = "Manage Roles";
}


<div class="gray-content" style="margin-top:20px;">
    <h2 class="green-header">Manage Roles</h2>
    <div class="row">
        <div class="col-md-12" >
            <div style="margin:-8px 0 0px 0px; line-height:40px;">
                @Html.ActionLink("Create New Role", "Create")
            </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.RoleName })" style="font-size:1em; color:black; padding-left:5px; float:right;">
                            <i class="glyphicon glyphicon-trash"></i>
                            <span class="sr-only" style="text-align:right;">Delete</span>
                        </a>
                        <a href="@Url.Action("Edit", new { id = item.RoleName })" style="font-size:1em; color:black; float:right;">
                            <i class="glyphicon glyphicon-pencil"></i>
                            <span class="sr-only" style="text-align:right;">Edit</span>
                        </a>
                    </td>
                </tr>
            }

        </table>
            </div>
        </div>
    </div>